  <script>
    const sheetId = "1Gcd4D5FeI3bhveOc4n4eoPk5wpZPBi7_bg9T-9LX3XY";
    const sheetName = "Sheet5";
    const url = `https://docs.google.com/spreadsheets/d/${sheetId}/gviz/tq?tqx=out:json&sheet=${sheetName}`;

    fetch(url)
      .then(res => res.text())
      .then(rep => {
        const json = JSON.parse(rep.substring(47).slice(0, -2));
        const rows = json.table.rows;
        const tableBody = document.querySelector("#delicacies-table tbody");

        rows.forEach(row => {
          const name = row.c[0]?.v || "";
          const price = row.c[1]?.v || "";
          const description = row.c[2]?.v || "";

          const tr = document.createElement("tr");
          tr.innerHTML = `
            <td><strong>${name}</strong></td>
            <td>${description}</td>
            <td style="text-align: right;">€${price}</td>
          `;
          tableBody.appendChild(tr);
        });
      });
  </script>
